<ResourceDictionary 
    xmlns    = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x  = "http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d  = "http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
>
    <!-- COLORS -->

    <Color x:Key = "Ternary1_COLOR">#000000</Color>
    
    <!-- BRUSHES -->

    <SolidColorBrush x:Key = "Primary0"    Color = "#dfdfdf"></SolidColorBrush>
    <SolidColorBrush x:Key = "Primary1"    Color = "#afafaf"></SolidColorBrush>
    <SolidColorBrush x:Key = "Primary2"    Color = "#8f8f8f"></SolidColorBrush>
    <SolidColorBrush x:Key = "Primary3"    Color = "#3f3f3f"></SolidColorBrush>
    <SolidColorBrush x:Key = "Primary4"    Color = "#2f2f2f"></SolidColorBrush>
    <SolidColorBrush x:Key = "Primary5"    Color = "#222222"></SolidColorBrush>
    <SolidColorBrush x:Key = "Primary6"    Color = "#1f1f1f"></SolidColorBrush>
    
    <SolidColorBrush x:Key = "Secondary0"  Color = "#04bff0"></SolidColorBrush>
    
    <SolidColorBrush x:Key = "Ternary0"    Color = "#161616"></SolidColorBrush>
    <SolidColorBrush x:Key = "Ternary1"    Color = "#000000"></SolidColorBrush>
    
    <!-- TEXT STYLES -->

    <Style x:Key = "Title0" TargetType = "Run">
        <Setter Property = "FontFamily" Value = "/Assets/Fonts/Nunito/#Nunito"/>
        <Setter Property = "FontStyle"  Value = "Italic"/>
        <Setter Property = "FontSize"   Value = "12.5"/>
        
        <Setter Property = "Foreground" Value = "{ StaticResource Primary0 }"/>
    </Style>

    <Style x:Key = "Title1" TargetType = "Run">
        <Setter Property = "FontFamily" Value = "/Assets/Fonts/Orbitron/#Orbitron"/>
        <Setter Property = "FontWeight" Value = "Bold"/>
        <Setter Property = "FontSize"   Value = "15"/>

        <Setter Property = "Foreground" Value = "{ StaticResource Secondary0 }"/>
    </Style>

    <Style x:Key = "Text0" TargetType = "TextBlock">
        <Setter Property = "FontSize"     Value = "12.5"/>

        <Setter Property = "Foreground"   Value = "{ StaticResource Primary1 }"/>

        <Setter Property = "TextWrapping" Value = "Wrap"/>
    </Style>

    <Style x:Key = "Text1" TargetType = "TextBlock">
        <Setter Property = "FontSize"     Value = "15"/>

        <Setter Property = "Foreground"   Value = "{ StaticResource Primary0 }"/>

        <Setter Property = "TextWrapping" Value = "Wrap"/>
    </Style>

    <Style x:Key = "Text2" TargetType = "TextBlock">
        <Setter Property = "FontSize"     Value = "15"/>
        <Setter Property = "FontWeight"   Value = "Bold"/>

        <Setter Property = "Foreground"   Value = "{ StaticResource Primary0 }"/>

        <Setter Property = "TextWrapping" Value = "Wrap"/>
    </Style>

    <Style x:Key = "Input0" TargetType = "TextBox">
        <Setter Property = "FontSize"        Value = "15"/>

        <Setter Property = "BorderThickness" Value = "0"/>

        <Setter Property = "CaretBrush"      Value = "{ StaticResource Primary0 }"/>
        <Setter Property = "Foreground"      Value = "{ StaticResource Primary0 }"/>
        <Setter Property = "Background"      Value = "{ StaticResource Ternary0 }"/>

        <Setter Property = "Padding"         Value = "2"/>
    </Style>

    <!-- BUTTON STYLES -->

    <Style x:Key = "Minimize_Button" TargetType = "Button">
        <Setter      Property = "BorderThickness" Value   = "0"/>
        <Setter      Property = "Background"      Value   = "Transparent"/>

        <Setter      Property = "Template">
            <Setter.Value>
                <ControlTemplate TargetType = "Button">
                    <Image x:Name = "Icon" Source = "/Assets/Images/Minimize.png"/>

                    <ControlTemplate.Triggers>
                        <Trigger Property = "IsMouseOver" Value = "True">
                            <Setter TargetName = "Icon" Property = "Opacity" Value = "0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key = "Exit_Button" TargetType = "Button">
        <Setter      Property = "BorderThickness" Value   = "0"/>
        <Setter      Property = "Background"      Value   = "Transparent"/>

        <Setter      Property = "Template">
            <Setter.Value>
                <ControlTemplate TargetType = "Button">
                    <Image x:Name = "Icon" Source = "/Assets/Images/Exit.png"/>

                    <ControlTemplate.Triggers>
                        <Trigger Property = "IsMouseOver" Value = "True">
                            <Setter TargetName = "Icon" Property = "Opacity" Value = "0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key = "Fullscreen_Button" TargetType = "ToggleButton">
        <Setter      Property = "BorderThickness" Value   = "0"/>
        <Setter      Property = "Background"      Value   = "Transparent"/>

        <Setter      Property = "Template">
            <Setter.Value>
                <ControlTemplate TargetType = "ToggleButton">
                    <Image x:Name = "Icon" Source = "/Assets/Images/Fullscreen.png"/>

                    <ControlTemplate.Triggers>
                        <Trigger Property = "IsMouseOver" Value = "True">
                            <Setter TargetName = "Icon" Property = "Opacity" Value = "0.5"/>
                        </Trigger>
                        <Trigger Property = "IsChecked" Value = "False">
                            <Setter TargetName = "Icon" Property = "Source" Value = "/Assets/Images/Fullscreen.png"/>
                        </Trigger>
                        <Trigger Property = "IsChecked" Value = "True">
                            <Setter TargetName = "Icon" Property = "Source" Value = "/Assets/Images/Windowed.png"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- WINDOW STYLES -->

    <Style x:Key = "Flexible_Window" TargetType = "Window">

        <Setter Property = "WindowStyle"        Value = "None"/>
        <Setter Property = "ResizeMode"         Value = "CanResizeWithGrip"/>

        <Setter Property = "BorderBrush"        Value = "{ StaticResource Primary3 }"/>
        <Setter Property = "BorderThickness"    Value = "1"/>

        <Setter Property = "AllowsTransparency" Value = "True"/>
        <Setter Property = "Background"         Value = "Transparent"/>
    </Style>

    <Style x:Key = "Fixed_Window" TargetType = "Window">
        <Setter Property = "WindowStyle"        Value = "None"/>
        <Setter Property = "ResizeMode"         Value = "NoResize"/>

        <Setter Property = "BorderBrush"        Value = "{ StaticResource Primary3 }"/>
        <Setter Property = "BorderThickness"    Value = "1"/>
        
        
    </Style>
    
    <!-- SHADOW EFFECTS -->

    <DropShadowEffect
        x:Key       = "Shadow_Down"
        
        Color       = "{ StaticResource Ternary1_COLOR }"
            
        BlurRadius  = "50"
        ShadowDepth = "10"
        Opacity     = "0.5" 
        Direction   = "270"
    />
    
    <DropShadowEffect
        x:Key       = "Shadow_Right"
    
        Color       = "{ StaticResource Ternary1_COLOR }"
        
        BlurRadius  = "50"
        ShadowDepth = "10"
        Opacity     = "0.5" 
        Direction   = "0"
    />

    <DropShadowEffect
        x:Key       = "Shadow_Up"

        Color       = "{ StaticResource Ternary1_COLOR }"
    
        BlurRadius  = "50"
        ShadowDepth = "10"
        Opacity     = "0.5" 
        Direction   = "90"
    />

    <DropShadowEffect
        x:Key       = "Shadow_Left"

        Color       = "{ StaticResource Ternary1_COLOR }"

        BlurRadius  = "50"
        ShadowDepth = "10"
        Opacity     = "0.5" 
        Direction   = "180"
    />

    <!-- GENERAL TEMPLATES -->

    <DataTemplate  x:Key = "Header">
        <Border 
            x:Name              = "Header"
            Panel.ZIndex        = "4" 
    
            Background          = "{ StaticResource Primary3 }"
    
            Padding             = "5 5 5 0"
            
            Effect              = "{ StaticResource Shadow_Down }"
        >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width = "auto"/>
                    <ColumnDefinition Width = "auto"/>
                    <ColumnDefinition Width = "auto"/>
                    <ColumnDefinition Width = "auto"/>
                    <ColumnDefinition Width = "*"   />
                    <ColumnDefinition Width = "auto"/>
                    <ColumnDefinition Width = "auto"/>
                    <ColumnDefinition Width = "auto"/>
                </Grid.ColumnDefinitions>

                <Image
                    x:Name       = "Logo"
            
                    Grid.Column  = "0"
            
                    Height       = "20" 
                    Width        = "20"
            
                    Panel.ZIndex = "4"
            
                    Margin       = "5"
                />    <!-- BRAND IMAGE -->
                <TextBlock 
                    x:Name                         = "Title"
    
                    Grid.Column                    = "1"
    
                    Panel.ZIndex                   = "4"
    
                    Margin                         = "5"
    
                    HorizontalAlignment            = "Center" 
                    VerticalAlignment              = "Center" 
    
                    TextOptions.TextFormattingMode = "Display" 
                    TextOptions.TextRenderingMode  = "Auto"
                >
                    <Run Text = "Lan"  Style = "{ StaticResource Title0 }"/>
                    <Run Text = "Chat" Style = "{ StaticResource Title1 }"/>
                </TextBlock> <!-- BRAND TITLE -->

                <Button 
                    x:Name       = "Minimize"
                    
                    Grid.Column  = "5" 
    
                    Height       = "20" 
                    Width        = "20" 
    
                    Panel.ZIndex = "4" 
    
                    Margin       = "5"
                    
                    Style        = "{ StaticResource Minimize_Button }"
                >
                </Button>       <!-- MINIMIZE   BUTTON -->
                <ToggleButton 
                    x:Name       = "Fullscreen"
                    
                    Grid.Column  = "6" 
    
                    Height       = "20" 
                    Width        = "20" 
    
                    Panel.ZIndex = "4" 
    
                    Margin       = "5"
                    
                    Style        = "{ StaticResource Fullscreen_Button }"
                >
                </ToggleButton> <!-- FULLSCREEN BUTTON -->
                <Button 
                    x:Name       = "Exit"
                    
                    Grid.Column  = "7" 
    
                    Height       = "20" 
                    Width        = "20" 
    
                    Panel.ZIndex = "4" 
    
                    Margin       = "5"
                    
                    Style        = "{ StaticResource Exit_Button }"
                >
                </Button>       <!-- EXIT       BUTTON -->
            </Grid>
        </Border>
    </DataTemplate>

    <DataTemplate x:Key = "Left_Border">
        <Border
            Panel.ZIndex = "3" 
    
            Background   = "{ StaticResource Primary4 }"
    
            Padding      = "5 0 0 5"
            
            Effect       = "{ StaticResource Shadow_Right }"
        >
        </Border>
    </DataTemplate>

    <DataTemplate x:Key = "Bottom_Border">
        <Border
            Panel.ZIndex = "3" 
    
            Background   = "{ StaticResource Primary4 }"
    
            Padding      = "0 0 0 5"
            
            Effect       = "{ StaticResource Shadow_Up }"
        >
        </Border>
    </DataTemplate>

    <DataTemplate x:Key = "Right_Border">
        <Border
            Panel.ZIndex = "3" 
    
            Background   = "{ StaticResource Primary4 }"
    
            Padding      = "5 0 0 5"
            
            Effect       = "{ StaticResource Shadow_Left }"
        >
        </Border>
    </DataTemplate>

    <DataTemplate  x:Key = "Panel">
        <Border 
            Panel.ZIndex = "3" 
    
            Background   = "{ StaticResource Primary4 }" 
        >
            <StackPanel x:Name = "Panel_Space"/>
        </Border>
    </DataTemplate>

    <DataTemplate  x:Key = "Boolean_Panel">
        <ScrollViewer 
            x:Name                      = "List"
    
            Panel.ZIndex                = "3" 
    
            Background                  = "{ StaticResource Primary4 }" 
    
            VerticalScrollBarVisibility = "Auto"
        >
            <StackPanel>
                <StackPanel x:Name = "True"/>

                <Border Height = "1" Background = "{ StaticResource Primary2 }" Margin = "10"/>

                <StackPanel x:Name = "False"/>
            </StackPanel>
        </ScrollViewer>
    </DataTemplate>

    <DataTemplate  x:Key = "Element_Window">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height = "30"  />
                <RowDefinition Height = "*"   />
                <RowDefinition Height = "5"   />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width = "5"/>
                <ColumnDefinition Width = "*"/>
                <ColumnDefinition Width = "5"/>
            </Grid.ColumnDefinitions>

            <Border
                Grid.Column     = "0"
                Grid.ColumnSpan = "3"
            
                Panel.ZIndex    = "4"
            
                Background      = "{ StaticResource Primary3 }"
            
                CornerRadius    = "5 5 0 0"
                
                Effect          = "{ StaticResource Shadow_Down }"
            >
                <TextBlock
                    x:Name        = "Title"
                    
                    Text          = "{ Binding }"

                    Background    = "Transparent"

                    TextAlignment = "Center"
                    Margin        = "5"
                    
                    Style="{ StaticResource Text1 }"
                >
                </TextBlock>
            </Border> <!-- WINDOW TITLE -->

            <Border
                Grid.Row     = "1"
                Grid.RowSpan = "3" 
    
                Panel.ZIndex = "3" 
    
                Background   = "{ StaticResource Primary4 }"
            
                CornerRadius = "0 0 0 5"
                
                Effect       = "{ StaticResource Shadow_Right }"
            >
            </Border> <!-- LEFT   BORDER -->
            <Border
                Grid.Row     = "3"
                Grid.Column  = "1"
    
                Panel.ZIndex = "3" 
    
                Background   = "{ StaticResource Primary4 }"
                
                Effect       = "{ StaticResource Shadow_Up }"
            >
            </Border> <!-- BOTTOM BORDER -->
            <Border
                Grid.Row     = "1"
                Grid.RowSpan = "3"
                Grid.Column  = "2"
    
                Panel.ZIndex = "3" 
    
                Background   = "{ StaticResource Primary4 }"
            
                CornerRadius = "0 0 5 0"
                
                Effect       = "{ StaticResource Shadow_Left }"
            >
            </Border> <!-- RIGHT  BORDER -->

            <ScrollViewer
                x:Name                      = "Scroll_Panel"
            
                Grid.Row                    = "1"
                Grid.Column                 = "1"
            
                Panel.ZIndex                = "1"
            
                Background                  = "{ StaticResource Ternary0 }"
            
                VerticalScrollBarVisibility = "Auto"
            >
                <StackPanel x:Name = "Elements"/>
            </ScrollViewer>
        </Grid>
    </DataTemplate>

    <DataTemplate  x:Key = "Extra_Element_Window">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height = "30"  />
                <RowDefinition Height = "*"   />
                <RowDefinition Height = "auto"/>
                <RowDefinition Height = "5"   />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width = "5"/>
                <ColumnDefinition Width = "*"/>
                <ColumnDefinition Width = "5"/>
            </Grid.ColumnDefinitions>

            <Border
                Grid.Column     = "0"
                Grid.ColumnSpan = "3"
    
                Panel.ZIndex    = "4"
    
                Background      = "{ StaticResource Primary3 }"
    
                CornerRadius    = "5 5 0 0"
        
                Effect          = "{ StaticResource Shadow_Down }"
            >
                <TextBlock
                    x:Name        = "Title"
            
                    Text          = "{ Binding }"

                    Background    = "Transparent"

                    TextAlignment = "Center"
                    Margin        = "5"
            
                    Style="{ StaticResource Text1 }"
                >
                </TextBlock>
            </Border> <!-- WINDOW TITLE -->

            <Border
                Grid.Row     = "1"
                Grid.RowSpan = "3" 
    
                Panel.ZIndex = "3" 
    
                Background   = "{ StaticResource Primary4 }"
    
                CornerRadius = "0 0 0 5"
        
                Effect       = "{ StaticResource Shadow_Right }"
            >
            </Border> <!-- LEFT   BORDER -->
            <Border
                Grid.Row     = "3"
                Grid.Column  = "1"
    
                Panel.ZIndex = "3" 
    
                Background   = "{ StaticResource Primary4 }"
        
                Effect       = "{ StaticResource Shadow_Up }"
            >
            </Border> <!-- BOTTOM BORDER -->
            <Border
                Grid.Row     = "1"
                Grid.RowSpan = "3"
                Grid.Column  = "2"
    
                Panel.ZIndex = "3" 
    
                Background   = "{ StaticResource Primary4 }"
    
                CornerRadius = "0 0 5 0"
        
                Effect       = "{ StaticResource Shadow_Left }"
            >
            </Border> <!-- RIGHT  BORDER -->

            <ScrollViewer
                x:Name                      = "Scroll_Panel"
    
                Grid.Row                    = "1"
                Grid.Column                 = "1"
    
                Panel.ZIndex                = "1"
    
                Background                  = "{ StaticResource Ternary0 }"
    
                VerticalScrollBarVisibility = "Auto"
            >
                <StackPanel x:Name = "Elements"/>
            </ScrollViewer>
        </Grid>
    </DataTemplate>

    <!-- INPUT TEMPLATES -->

    <DataTemplate x:Key = "Single_Input_Panel">
        <Border 
        Panel.ZIndex = "2" 
    
        Background   = "{ StaticResource Primary5 }"
    >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width = "*" />
                    <ColumnDefinition Width = "75"/>
                </Grid.ColumnDefinitions>

                <TextBox 
                    x:Name                        = "Input" 
    
                    Grid.Column                   = "0"
                    
                    MaxLines                      = "1"
    
                    VerticalScrollBarVisibility   = "Disabled"
                    HorizontalScrollBarVisibility = "Disabled"
    
                    AcceptsReturn                 = "False"
    
                    TextWrapping                  = "NoWrap"
                    Margin                        = "8"
                    
                    Style                         = "{ StaticResource Input0 }"
                /> <!-- INPUT BOX    -->
                <Button 
                    x:Name       = "Enter" 
    
                    Grid.Column  = "1" 
                    
                    Height       = "20" 
    
                    Panel.ZIndex = "4" 
    
                    Background = "{ StaticResource Primary0 }" 
    
                    VerticalAlignment = "Top" 
    
                    Margin ="10 10 10 0"
                >
                    <Button.Template>
                        <ControlTemplate TargetType = "Button">
                            <Image x:Name = "Icon" Source = "/Assets/Images/Enter.png"/>

                            <ControlTemplate.Triggers>
                                <Trigger Property = "IsMouseOver" Value = "True">
                                    <Setter TargetName = "Icon" Property = "Opacity" Value = "0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>   <!-- ENTER BUTTON -->
            </Grid>
        </Border>
    </DataTemplate>

    <DataTemplate x:Key = "Multi_Input_Panel">
        <Border 
            Panel.ZIndex = "2" 

            Background   = "{ StaticResource Primary5 }"
        >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width = "*" />
                    <ColumnDefinition Width = "75"/>
                </Grid.ColumnDefinitions>

                <TextBox 
                    x:Name                        = "Input" 

                    Grid.Column                   = "0"

                    VerticalScrollBarVisibility   = "Auto"
                    HorizontalScrollBarVisibility = "Disabled"

                    AcceptsReturn                 = "True"

                    TextWrapping                  = "Wrap"
                    Margin                        = "8"
                
                    Style                         = "{ StaticResource Input0 }"
                /> <!-- INPUT BOX    -->
                <Button 
                    x:Name       = "Enter" 

                    Grid.Column  = "1" 
                
                    Height       = "20" 

                    Panel.ZIndex = "4" 

                    Background = "{ StaticResource Primary0 }" 

                    VerticalAlignment = "Top" 

                    Margin ="10 10 10 0"
            >
                    <Button.Template>
                        <ControlTemplate TargetType = "Button">
                            <Image x:Name = "Icon" Source = "/Assets/Images/Enter.png"/>

                            <ControlTemplate.Triggers>
                                <Trigger Property = "IsMouseOver" Value = "True">
                                    <Setter TargetName = "Icon" Property = "Opacity" Value = "0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button> <!-- ENTER BUTTON -->
            </Grid>
        </Border>
    </DataTemplate>

    <!-- ELEMENT TEMPLATES -->

    <DataTemplate  x:Key = "Client">

    </DataTemplate>

    <DataTemplate  x:Key = "Server">
        <Button
            Background                 = "Transparent"
                    
            HorizontalContentAlignment = "Left"
                    
            Margin                     = "10"
        >
            <Grid Margin = "2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width = "auto"/>
                    <ColumnDefinition Width = "auto"/>
                    <ColumnDefinition Width = "auto"/>
                    <ColumnDefinition Width = "auto"/>
                    <ColumnDefinition Width = "auto"/>
                    <ColumnDefinition Width = "auto"/>
                    <ColumnDefinition Width = "*"   />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column                    = "0"
                    
                    Text                           = "{ Binding Name }"
                    
                    VerticalAlignment              = "Center" 
    
                    TextOptions.TextFormattingMode = "Display" 
                    TextOptions.TextRenderingMode  = "Auto"
    
                    Style                          = "{ StaticResource Text1 }"
                >
                </TextBlock>
                <TextBlock
                    Grid.Column                    = "1"
    
                    Text                           = "{} { "
    
                    VerticalAlignment              = "Center" 
    
                    TextOptions.TextFormattingMode = "Display" 
                    TextOptions.TextRenderingMode  = "Auto"
    
                    Style                          = "{ StaticResource Text1 }"
                >
                </TextBlock>
                <TextBlock
                    Grid.Column                    = "2"
    
                    Text                           = "{ Binding Ip }"
    
                    VerticalAlignment              = "Center" 
    
                    TextOptions.TextFormattingMode = "Display" 
                    TextOptions.TextRenderingMode  = "Auto"
    
                    Style                          = "{ StaticResource Text1 }"
                >
                </TextBlock>
                <TextBlock
                    Grid.Column                    = "3"
    
                    Text                           = " : "
    
                    VerticalAlignment              = "Center" 
    
                    TextOptions.TextFormattingMode = "Display" 
                    TextOptions.TextRenderingMode  = "Auto"
    
                    Style                          = "{ StaticResource Text1 }"
                >
                </TextBlock>
                <TextBlock
                    Grid.Column                    = "4"
    
                    Text                           = "{ Binding Port }"
    
                    VerticalAlignment              = "Center" 
    
                    TextOptions.TextFormattingMode = "Display" 
                    TextOptions.TextRenderingMode  = "Auto"
    
                    Style                          = "{ StaticResource Text1 }"
                >
                </TextBlock>
                <TextBlock
                    Grid.Column                    = "5"
    
                    Text                           = "{} }"
                    
                    VerticalAlignment              = "Center" 
    
                    TextOptions.TextFormattingMode = "Display" 
                    TextOptions.TextRenderingMode  = "Auto"
    
                    Style                          = "{ StaticResource Text1 }"
                >
                </TextBlock>
            </Grid>
        </Button>
    </DataTemplate>

    <DataTemplate  x:Key = "Message">
        <StackPanel Margin = "25 10 25 10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width = "auto"/>
                    <ColumnDefinition Width = "*"   />
                </Grid.ColumnDefinitions>

                <TextBlock 
                    x:Name      = "Sender"
                
                    Grid.Column = "0"
                
                    Text        = "{ Binding Sender }" 
                    
                    Margin      = "0 5"
                    
                    Style       = "{ StaticResource Text2 }"
                />
                <!-- MESSAGE SENDER -->
                <TextBlock 
                    x:Name            = "Time"
                
                    Grid.Column       = "1"
                
                    Text              = "{Binding Time}" 
                    
                    VerticalAlignment = "Center"
                    Margin            = "5 0 0 0"
                    
                    Style             = "{ StaticResource Text0 }"
                />
                <!-- MESSAGE TIME   -->
            </Grid>

            <TextBlock
                x:Name  = "Content"
            
                Text    = "{ Binding Content }" 
                
                Padding = "25 5 0 0"
                
                Style   = "{ StaticResource Text1 }"
            />
            <!-- MESSAGE CONTENT -->
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>