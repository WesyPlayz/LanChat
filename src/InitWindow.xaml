<Window 
    x:Class            = "LanChat.Runtime.InitWindow"
    
    xmlns              = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x            = "http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d            = "http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc           = "http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local        = "clr-namespace:LanChat.Runtime"
    mc:Ignorable       = "d"
        
    Title              = "LanChat Initializer" 
    
    WindowStyle        = "None"
    ResizeMode         = "NoResize"
        
    MaxHeight          = "500" 
    MaxWidth           = "450"
    
    MinHeight          = "500"
    MinWidth           = "450"
    
    BorderBrush        = "#3f3f3f"
    BorderThickness    = "1"

    AllowsTransparency = "True"
    Background         = "#1f1f1f"
>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height = "5"  />
            <RowDefinition Height = "30" />
            <RowDefinition Height = "100" />
            <RowDefinition Height = "100"/>
            <RowDefinition Height = "260"/>
            <RowDefinition Height = "5"  />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "5" />
            <ColumnDefinition Width = "10"/>
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "10"/>
            <ColumnDefinition Width = "5" />
        </Grid.ColumnDefinitions>

        <Border
            x:Name              = "Header"
    
            MouseLeftButtonDown = "Drag"
    
            Grid.RowSpan        = "2"
            Grid.ColumnSpan     = "5" 
    
            Panel.ZIndex        = "3" 
    
            Background          = "#3f3f3f"
    
            Padding             = "5 5 5 0"
        >
            <Border.Effect>
                <DropShadowEffect
                    Color       = "#000000"
            
                    BlurRadius  = "50"
                    ShadowDepth = "10"
                    Opacity     = "0.5" 
                    Direction   = "270"
                />
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width = "auto"/>
                    <ColumnDefinition Width = "auto"/>
                    <ColumnDefinition Width = "*"   />
                    <ColumnDefinition Width = "auto"/>
                    <ColumnDefinition Width = "auto"/>
                </Grid.ColumnDefinitions>

                <Image
                    x:Name       = "Logo"
            
                    Grid.Column  = "0"
            
                    Height       = "20" 
                    Width        = "20"
            
                    Panel.ZIndex = "4"
            
                    Margin       = "5"
                />    <!-- BRAND IMAGE -->
                <TextBlock 
                    x:Name                         = "Title"
                    
                    Grid.Column                    = "1"
                    
                    Panel.ZIndex                   = "4"
                    
                    Margin                         = "5"
                    
                    HorizontalAlignment            = "Center" 
                    VerticalAlignment              = "Center" 
                    
                    TextOptions.TextFormattingMode = "Display" 
                    TextOptions.TextRenderingMode  = "Auto"
                >
                    <Run 
                        Text       = "Lan" 
                        
                        FontSize   = "12.5"
                        
                        FontFamily = "/Assets/Fonts/Nunito/#Nunito"
                        FontStyle  = "Italic" 
                        
                        Foreground = "#dfdfdf"  
                    />
                    <Run 
                        Text       = "Chat" 
                        
                        FontSize   = "15" 
                        
                        FontFamily = "/Assets/Fonts/Orbitron/#Orbitron" 
                        FontWeight = "Bold" 
                        
                        Foreground = "#04bff0" 
                    />
                </TextBlock> <!-- BRAND TITLE -->

                <Button 
                    Click           = "Minimize" 
                    
                    Grid.Column     = "3" 
                    
                    Height          = "20" 
                    Width           = "20" 
                    
                    Panel.ZIndex    = "4" 
                    
                    BorderThickness = "0"
                    Background      = "Transparent"
                    
                    Margin          = "5"
                >
                    <Button.Template>
                        <ControlTemplate TargetType = "Button">
                            <Image x:Name = "Icon" Source = "/Assets/Images/Minimize.png"/>
                            
                            <ControlTemplate.Triggers>
                                <Trigger Property = "IsMouseOver" Value = "True">
                                    <Setter TargetName = "Icon" Property = "Opacity" Value = "0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button> <!-- MINIMIZE BUTTON -->
                <Button 
                    Click           = "Exit"     
                    
                    Grid.Column     = "4" 
                    
                    Height          = "20" 
                    Width           = "20" 
                    
                    Panel.ZIndex    = "4" 
                    
                    BorderThickness = "0"
                    Background      = "Transparent"
                    
                    Margin          = "5"
                >
                    <Button.Template>
                        <ControlTemplate TargetType = "Button">
                            <Image x:Name = "Icon" Source = "/Assets/Images/Exit.png"/>
                            
                            <ControlTemplate.Triggers>
                                <Trigger Property = "IsMouseOver" Value = "True">
                                    <Setter TargetName = "Icon" Property = "Opacity" Value = "0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button> <!-- EXIT     BUTTON -->
            </Grid>
        </Border>

        <Border
            Grid.Row     = "2"
            Grid.RowSpan = "4" 
    
            Panel.ZIndex = "2" 
    
            Background   = "#2f2f2f"
    
            Padding      = "5 0 0 5"
        >
            <Border.Effect>
                <DropShadowEffect
                    Color       = "#000000"
    
                    BlurRadius  = "50"
                    ShadowDepth = "10"
                    Opacity     = "0.5" 
                    Direction   = "0"
                />
            </Border.Effect>
        </Border> <!-- LEFT   BORDER -->
        <Border
            Grid.Row        = "5"
            Grid.Column     = "1"
            Grid.ColumnSpan = "3"
    
            Panel.ZIndex    = "2" 
    
            Background      = "#2f2f2f"
    
            Padding         = "0 0 0 5"
        >
            <Border.Effect>
                <DropShadowEffect
                    Color       = "#000000"
    
                    BlurRadius  = "50"
                    ShadowDepth = "10"
                    Opacity     = "0.5" 
                    Direction   = "90"
                />
            </Border.Effect>
        </Border> <!-- BOTTOM BORDER -->
        <Border
            Grid.Row     = "2"
            Grid.RowSpan = "4" 
            Grid.Column  = "4"
    
            Panel.ZIndex = "2" 
    
            Background   = "#2f2f2f"
    
            Padding      = "5 0 0 5"
        >
            <Border.Effect>
                <DropShadowEffect
                    Color       = "#000000"
    
                    BlurRadius  = "50"
                    ShadowDepth = "10"
                    Opacity     = "0.5" 
                    Direction   = "180"
                />
            </Border.Effect>
        </Border> <!-- RIGHT  BORDER -->

        <Grid
            Grid.Row    = "3"
            Grid.Column = "2"
        >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width = "auto"/>
                <ColumnDefinition Width = "auto"/>
                <ColumnDefinition Width = "auto"/>
            </Grid.ColumnDefinitions>

            <Button 
                Click           = "Client"     
                MouseEnter      = "Client_HVR"     
    
                Grid.Column     = "0" 
    
                Width           = "80" 

                BorderThickness = "0"
                Background      = "Transparent"
    
                Margin          = "30 10"
            >
                <Button.Template>
                    <ControlTemplate TargetType = "Button">
                        <Image x:Name = "Icon" Source = "/Assets/Images/Client.png"/>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property = "IsMouseOver" Value = "True">
                                <Setter TargetName = "Icon" Property = "Source" Value = "/Assets/Images/Client_HVR.png"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button> <!-- CLIENT     BUTTON -->
            <Button 
                Click           = "Local_Host"     
                MouseEnter      = "Local_Host_HVR"     
    
                Grid.Column     = "1" 
    
                Width           = "80" 

                BorderThickness = "0"
                Background      = "Transparent"
    
                Margin          = "30 10"
            >
                <Button.Template>
                    <ControlTemplate TargetType = "Button">
                        <Image x:Name = "Icon" Source = "/Assets/Images/Local_Host.png"/>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property = "IsMouseOver" Value = "True">
                                <Setter TargetName = "Icon" Property = "Source" Value = "/Assets/Images/Local_Host_HVR.png"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button> <!-- LOCAL HOST BUTTON -->
            <Button 
                Click           = "Server"     
                MouseEnter      = "Server_HVR"     
                
                Grid.Column     = "2" 
                
                Width           = "80" 

                BorderThickness = "0"
                Background      = "Transparent"
                
                Margin          = "30 10"
            >
                <Button.Template>
                    <ControlTemplate TargetType = "Button">
                        <Image x:Name = "Icon" Source = "/Assets/Images/Server.png"/>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property = "IsMouseOver" Value = "True">
                                <Setter TargetName = "Icon" Property = "Source" Value = "/Assets/Images/Server_HVR.png"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button> <!-- SERVER     BUTTON -->
        </Grid>

        <TextBlock
            Grid.Row            = "2"
            Grid.Column         = "2"
    
            Text                = "Pick a process to run LanChat on."
    
            FontSize            = "25"
    
            Foreground          = "#dfdfdf"
            
            VerticalAlignment   = "Center"
            HorizontalAlignment = "Center"
    
            TextWrapping        = "Wrap"
            Margin              = "25"
        /> <!-- INSTRUCTION TEXT -->
        <TextBlock
            x:Name       = "Description"
            
            Grid.Row     = "4"
            Grid.Column  = "2"
            
            Text         = "{Binding}"
            
            FontSize     = "15"
            
            Foreground   = "#dfdfdf"
            
            TextWrapping = "Wrap"
            Margin       = "25"
        /> <!-- DESCRIPTION TEXT -->
    </Grid>
</Window>