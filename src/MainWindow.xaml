<Window 
    x:Class            = "LanChat.Runtime.MainWindow"
    
    xmlns              = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x            = "http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d            = "http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc           = "http://schemas.openxmlformats.org/markup-compatibility/2006"

    xmlns:local        = "clr-namespace:LanChat.Runtime"
    mc:Ignorable       = "d"
    
    Title              = "LanChat Interface" 
    
    WindowStyle        = "None"
    ResizeMode         = "CanResizeWithGrip"
    
    Height             = "500" 
    Width              = "900"
    
    MinHeight          = "500"
    MinWidth           = "900"
    
    BorderBrush        = "#3f3f3f"
    BorderThickness    = "1"
    
    AllowsTransparency = "True"
    Background         = "Transparent"
>
    <Window.Resources>
        <DataTemplate x:Key = "Message">
            <StackPanel Margin = "25 10 25 10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width = "auto"/>
                        <ColumnDefinition Width = "*"   />
                    </Grid.ColumnDefinitions>

                    <TextBlock 
                        x:Name       = "Sender"
                        
                        Grid.Column  = "0"
                        
                        Text         = "{Binding Sender}" 
                        FontSize     = "15"
                        FontWeight   = "Bold"
                        
                        Foreground   = "#dfdfdf"
                        
                        TextWrapping = "Wrap"
                        Margin       = "0 5"
                    /> <!-- MESSAGE SENDER -->
                    <TextBlock 
                        x:Name            = "Time"
                        
                        Grid.Column       = "1"
                        
                        Text              = "{Binding Time}" 
                        FontSize          = "12.5"
                        
                        Foreground        = "#afafaf"
                        
                        TextWrapping      = "Wrap"
                        VerticalAlignment = "Center"
                        Margin            = "5 0 0 0"
                    /> <!-- MESSAGE TIME   -->
                </Grid>

                <TextBlock
                    x:Name       = "Content"
                    
                    Text         = "{Binding Content}" 
                    FontSize     = "15"
                    
                    Foreground   = "#dfdfdf"
                    
                    TextWrapping = "Wrap"
                    Padding      = "25 5 0 0"
                /> <!-- MESSAGE CONTENT -->
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key = "Login_Page">
            <Grid>
                
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key = "Chat_Page">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height = "5"   />
                    <RowDefinition Height = "30"  />
                    <RowDefinition Height = "*"   />
                    <RowDefinition Height = "auto"/>
                    <RowDefinition Height = "5"   />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width = "5"  />
                    <ColumnDefinition Width = "*"  />
                    <ColumnDefinition Width = "250"/>
                    <ColumnDefinition Width = "5"  />
                </Grid.ColumnDefinitions>

                <Border 
                    x:Name              = "Header"
                    
                    MouseLeftButtonDown = "Drag"
                    
                    Grid.RowSpan        = "2"
                    Grid.ColumnSpan     = "4" 
                    
                    Panel.ZIndex        = "3" 
                    
                    Background          = "#3f3f3f"
                    
                    Padding             = "5 5 5 0"
                >
                    <Border.Effect>
                        <DropShadowEffect
                            Color       = "#000000"
                            
                            BlurRadius  = "50"
                            ShadowDepth = "10"
                            Opacity     = "0.5" 
                            Direction   = "270"
                        />
                    </Border.Effect>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width = "auto"/>
                            <ColumnDefinition Width = "auto"/>
                            <ColumnDefinition Width = "auto"/>
                            <ColumnDefinition Width = "auto"/>
                            <ColumnDefinition Width = "*"   />
                            <ColumnDefinition Width = "auto"/>
                            <ColumnDefinition Width = "auto"/>
                            <ColumnDefinition Width = "auto"/>
                        </Grid.ColumnDefinitions>

                        <Image
                            x:Name       = "Logo"
                            
                            Grid.Column  = "0"
                            
                            Height       = "20" 
                            Width        = "20"
                            
                            Panel.ZIndex = "4"
                            
                            Margin       = "5"
                        />    <!-- BRAND IMAGE -->
                        <TextBlock 
                            x:Name                         = "Title"
    
                            Grid.Column                    = "1"
    
                            Panel.ZIndex                   = "4"
    
                            Margin                         = "5"
    
                            HorizontalAlignment            = "Center" 
                            VerticalAlignment              = "Center" 
    
                            TextOptions.TextFormattingMode = "Display" 
                            TextOptions.TextRenderingMode  = "Auto"
                        >
                            <Run 
                                Text       = "Lan" 
                                FontFamily = "/Fonts/Nunito/#Nunito"
                                FontStyle  = "Italic" 
                                Foreground = "#dfdfdf" 
                                FontSize   = "12.5" 
                            />
    
                            <Run 
                                Text       = "Chat" 
                                FontFamily = "Fonts/Orbitron/#Orbitron" 
                                FontWeight = "Bold" 
                                Foreground = "#04bff0" 
                                FontSize   = "15" 
                            />
                        </TextBlock> <!-- BRAND TITLE -->

                        <Button Grid.Column = "2" Height = "20" Width = "20" Panel.ZIndex = "4" Margin = "5"/>
                        <Button Grid.Column = "3" Height = "20" Width = "20" Panel.ZIndex = "4" Margin = "5"/>

                        <Button 
                            Click           = "Minimize" 
    
                            Grid.Column     = "5" 
    
                            Height          = "20" 
                            Width           = "20" 
    
                            Panel.ZIndex    = "4" 
    
                            BorderThickness = "0"
                            Background      = "Transparent"
    
                            Margin          = "5"
                        >
                            <Button.Template>
                                <ControlTemplate TargetType = "Button">
                                    <Image x:Name = "Icon" Source = "/Images/Minimize.png"/>

                                    <ControlTemplate.Triggers>
                                        <Trigger Property = "IsMouseOver" Value = "True">
                                            <Setter TargetName = "Icon" Property = "Opacity" Value = "0.5"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>       <!-- MINIMIZE   BUTTON -->
                        <ToggleButton 
                            Click           = "Fullscreen" 
    
                            Grid.Column     = "6" 
    
                            Height          = "20" 
                            Width           = "20" 
    
                            Panel.ZIndex    = "4" 
    
                            BorderThickness = "0"
                            Background      = "Transparent"
    
                            Margin          = "5"
                        >
                            <ToggleButton.Template>
                                <ControlTemplate TargetType = "ToggleButton">
                                    <Image x:Name = "Icon" Source = "/Images/Fullscreen.png"/>

                                    <ControlTemplate.Triggers>
                                        <Trigger Property = "IsMouseOver" Value = "True">
                                            <Setter TargetName = "Icon" Property = "Opacity" Value = "0.5"/>
                                        </Trigger>
                                        <Trigger Property = "IsChecked" Value = "False">
                                            <Setter TargetName = "Icon" Property = "Source" Value = "/Images/Fullscreen.png"/>
                                        </Trigger>
                                        <Trigger Property = "IsChecked" Value = "True">
                                            <Setter TargetName = "Icon" Property = "Source" Value = "/Images/Windowed.png"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton> <!-- FULLSCREEN BUTTON -->
                        <Button 
                            Click           = "Exit"     
    
                            Grid.Column     = "7" 
    
                            Height          = "20" 
                            Width           = "20" 
    
                            Panel.ZIndex    = "4" 
    
                            BorderThickness = "0"
                            Background      = "Transparent"
    
                            Margin          = "5"
                        >
                            <Button.Template>
                                <ControlTemplate TargetType = "Button">
                                    <Image x:Name = "Icon" Source = "/Images/Exit.png"/>

                                    <ControlTemplate.Triggers>
                                        <Trigger Property = "IsMouseOver" Value = "True">
                                            <Setter TargetName = "Icon" Property = "Opacity" Value = "0.5"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>       <!-- EXIT       BUTTON -->
                    </Grid>
                </Border>

                <Border
                    Grid.Row     = "2"
                    Grid.RowSpan = "3" 
                    
                    Panel.ZIndex = "2" 
                    
                    Background   = "#2f2f2f"
                    
                    Padding      = "5 0 0 5"
                >
                    <Border.Effect>
                        <DropShadowEffect
                            Color       = "#000000"
    
                            BlurRadius  = "50"
                            ShadowDepth = "10"
                            Opacity     = "0.5" 
                            Direction   = "0"
                        />
                    </Border.Effect>
                </Border>       <!-- LEFT   BORDER -->
                <Border
                    Grid.Row     = "4"
                    Grid.Column  = "1"
    
                    Panel.ZIndex = "2" 
    
                    Background   = "#2f2f2f"
    
                    Padding      = "0 0 0 5"
                >
                    <Border.Effect>
                        <DropShadowEffect
                            Color       = "#000000"
    
                            BlurRadius  = "50"
                            ShadowDepth = "10"
                            Opacity     = "0.5" 
                            Direction   = "90"
                        />
                    </Border.Effect>
                </Border>       <!-- BOTTOM BORDER -->
                <ScrollViewer 
                    x:Name                      = "Client_List"
                    
                    Grid.Row                    = "2" 
                    Grid.RowSpan                = "3" 
                    Grid.Column                 = "2" 
                    Grid.ColumnSpan             = "2"
                    
                    Panel.ZIndex                = "2" 
                    
                    Background                  = "#2f2f2f" 
                    
                    VerticalScrollBarVisibility = "Auto"
                    
                    Padding                     = "0 0 5 5"
                >
                    <ScrollViewer.Effect>
                        <DropShadowEffect
                            Color       = "#000000"
                            
                            BlurRadius  = "50"
                            ShadowDepth = "10"
                            Opacity     = "0.5" 
                            Direction   = "180"
                        />
                    </ScrollViewer.Effect>

                    <StackPanel>
                        <StackPanel x:Name = "Active_Clients"/>

                        <Border Height = "1" Background = "#8f8f8f" Margin = "10"/>

                        <StackPanel x:Name = "Inactive_Clients"/>
                    </StackPanel>
                </ScrollViewer> <!-- RIGHT  BORDER -->

                <Border 
                    x:Name       = "Input_Panel"
                    
                    Grid.Row     = "3" 
                    Grid.Column  = "1" 
                    
                    Panel.ZIndex = "1" 
                    
                    Background   = "#222222"
                >
                    <Border.Effect>
                        <DropShadowEffect
                            Color       = "#000000"
                            
                            BlurRadius  = "50"
                            ShadowDepth = "10"
                            Opacity     = "0.5" 
                            Direction   = "90"
                        />
                    </Border.Effect>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width = "*" />
                            <ColumnDefinition Width = "75"/>
                        </Grid.ColumnDefinitions>

                        <TextBox 
                            x:Name                        = "Input" 
                            
                            PreviewKeyDown                = "Invoke"
                            
                            Grid.Column                   = "0"
                            
                            MaxHeight                     = "200"
                            
                            FontSize                      = "15"
                            
                            BorderThickness               = "0"
                            Foreground                    = "#dfdfdf"
                            CaretBrush                    = "#dfdfdf"
                            Background                    = "Transparent"
                            
                            VerticalScrollBarVisibility   = "Auto"
                            HorizontalScrollBarVisibility = "Disabled"
                            
                            AcceptsReturn                 = "True"
                            
                            TextWrapping                  = "Wrap"
                            Margin                        = "10"
                        /> <!-- MESSAGE INPUT BOX    -->
                        <Button 
                            x:Name = "Enter" 
                            
                            Click = "Send" 
                            
                            Grid.Column = "1" 
                            
                            Panel.ZIndex = "4" 
                            
                            Height = "20" 
                            
                            Background = "#dfdfdf" 
                            
                            VerticalAlignment = "Top" 
                            
                            Margin ="10 10 10 0"
                        >
                            <Button.Template>
                                <ControlTemplate TargetType = "Button">
                                    <Image x:Name = "Icon" Source = "/Images/Enter.png"/>

                                    <ControlTemplate.Triggers>
                                        <Trigger Property = "IsMouseOver" Value = "True">
                                            <Setter TargetName = "Icon" Property = "Opacity" Value = "0.5"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>   <!-- MESSAGE ENTER BUTTON -->
                    </Grid>
                </Border>

                <ScrollViewer 
                    x:Name                      = "Message_Panel" 
                    
                    ScrollChanged               = "Cycle" 
                    PreviewMouseWheel           = "Dampener" 
                    
                    Grid.Row                    = "2" 
                    Grid.Column                 = "1" 
                    
                    Panel.ZIndex                = "0"
                    
                    Background                  = "#1f1f1f" 
                    
                    VerticalScrollBarVisibility = "Auto"
                >
                    <StackPanel x:Name = "Messages"/>
                </ScrollViewer>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key = "Terminal_Page">
            <Grid>
                
            </Grid>
        </DataTemplate>
    </Window.Resources>

    <Border x:Name = "Screen_Space">
        
    </Border>
</Window>